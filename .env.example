# Database connection string - required
# Format: postgresql://username:password@hostname:port/database_name
DATABASE_URL=postgresql://postgres:password@localhost:5432/secure_file_system

# Secret key for session encryption - required
# Generate with: python -c "import secrets; print(secrets.token_hex(32))"
SESSION_SECRET=your_secret_key_here

# Flask environment - development, testing, or production
FLASK_ENV=development

# Enable/disable Flask debug mode - 1 for True, 0 for False
FLASK_DEBUG=1

# Log level - DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO

# Maximum upload file size in bytes (default: 16MB)
# MAX_CONTENT_LENGTH=16777216

# Name that appears in 2FA authentication apps
# OTP_ISSUER_NAME=Secure File System